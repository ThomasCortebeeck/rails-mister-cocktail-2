<h1 class="text-center">Ingredients and doses</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3">
			<%= simple_form_for [@cocktail, @dose] do |f| %>
			<%= f.association :ingredient, collection: Ingredient.order(:name), :prompt => "Choose an ingredient"%>
			 <%= f.input :description %>
			  <%= f.submit "Add ingredient and dose", class: "btn btn-primary" %>
			<% end %>	
		</div>	
	</div>
</div>

<!-- f.association :ingredient -> there has to be a description, ingredient_id and cocktail_id if you add a dose
:ingredient -> look at the model :ingredient -->
